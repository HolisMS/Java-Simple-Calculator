<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="buttonstyle1" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/Black</item>
        <item name="colorControlHighlight">@color/DarkGrey</item>
    </style>

    <style name="buttonstyle2" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/DeepSkyBlue</item>
        <item name="colorControlHighlight">@color/DodgerBlue</item>
    </style>

    <style name="customText" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

</resources>
